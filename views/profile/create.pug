extends ../layout

block content
                h1(style='padding-left: 15px; font-weight:bold') CREATE ACCOUNT

                form(method='POST' action='/profile/create')
                    label(for='fname') Username
                    input#fname(type='text' name='name' placeholder='Kawhi Leonard')
                    label(for='email') Email
                    input#email(type='email' name='email' placeholder='kawhi@gmail.com')
                    label(for='pw') Password:
                    input#pw(type='password' name='password')
                    label(for='pw2') Confirm Password:
                    input#pw2(type='password' name='confirmPassword')
                    input(type='submit' value='REGISTER')

                    p(style='text-align: center') already have an account?
                    a(href='/profile/login') Login

